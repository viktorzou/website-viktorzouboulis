---
const { title = "My Astro Site" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="My Astro + Cloudflare site" />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body style="font-family: system-ui; margin: 0; line-height: 1.6;">
    <header style="padding: 1rem; border-bottom: 1px solid #eee;">
      <nav style="display:flex; gap:.75rem;">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/blog">Blog</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>
    <main style="padding: 2rem; max-width: 760px; margin: 0 auto;">
      <slot />
    </main>
    <footer style="padding: 2rem; border-top: 1px solid #eee; text-align:center;">
      © {new Date().getFullYear()} — Built with Astro
    </footer>
  </body>
</html>
