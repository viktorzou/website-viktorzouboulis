---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = (await getCollection("blog"))
  .filter(p => !p.data.draft)
  .sort((a,b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<Layout title="Blog — Viktor Zoubouli">
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-slate-50 to-blue-50 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-slate-900 dark:text-slate-100 mb-6">
        Blog
      </h1>
      <p class="text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto leading-relaxed">
        Thoughts, tutorials, and insights about web development, design, and technology.
      </p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      {posts.length > 0 ? (
        <div class="grid gap-8">
          {posts.map(({ slug, data }) => (
            <article class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="p-8">
                <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-4">
                  <time datetime={data.pubDate.toISOString()}>
                    {data.pubDate.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </time>
                  <span>•</span>
                  <span>5 min read</span>
                </div>
                
                <h2 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-slate-100 mb-4 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                  <a href={`/blog/${slug}/`}>{data.title}</a>
                </h2>
                
                {data.description && (
                  <p class="text-lg text-slate-600 dark:text-slate-300 mb-6 leading-relaxed">
                    {data.description}
                  </p>
                )}
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                      <span class="text-white text-sm font-semibold">VZ</span>
                    </div>
                    <span class="text-slate-700 dark:text-slate-300 font-medium">Viktor Zoubouli</span>
                  </div>
                  
                  <a href={`/blog/${slug}/`} class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 font-medium hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                    Read More
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900 dark:to-purple-900 rounded-full mx-auto mb-6 flex items-center justify-center">
            <svg class="w-12 h-12 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-slate-900 dark:text-slate-100 mb-4">
            No posts yet
          </h3>
          <p class="text-slate-600 dark:text-slate-400 max-w-md mx-auto">
            I'm working on some great content. Check back soon for articles about web development, design, and technology!
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>
