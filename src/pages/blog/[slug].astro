---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Build-time: tell Astro which /blog/<slug>/ pages to generate
export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

// Per-page: receive the post picked above
const { post } = Astro.props;
const { Content, data } = await post.render();
---
<Layout title={`${data.title} â€” Blog`}>
  <article class="prose">
    <h1>{data.title}</h1>
    <p class="text-sm text-neutral-600">
      {data.pubDate.toLocaleDateString(undefined, {
        year: "numeric", month: "short", day: "2-digit"
      })}
    </p>
    <Content />
  </article>
</Layout>
